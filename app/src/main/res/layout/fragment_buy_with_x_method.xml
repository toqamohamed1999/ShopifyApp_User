<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:fontFamily="@font/acme"
        android:text="@string/choose_method"
        android:textAlignment="center"
        android:textColor="@color/secondary_color"
        android:textSize="34sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/method_pay_google_pay"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="35dp"

        android:background="@drawable/googlepay_button_no_shadow_background_image"
        android:cropToPadding="true"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:src="@drawable/googlepay_button_content" />

    <ImageView
        android:id="@+id/method_pay_cach_on_delivery"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="3dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginStart="2dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/googlepay_button_no_shadow_background_image"
        android:cropToPadding="false"
        android:scaleType="center"
        app:srcCompat="@drawable/cash_on_delivery" />

</FrameLayout>
